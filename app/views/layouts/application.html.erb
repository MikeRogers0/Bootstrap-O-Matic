<!DOCTYPE html>
<html>
  <head>
    <title>Bootstrap-O-Matic</title>
    <%= csrf_meta_tags %>
    <meta name="turbolinks-cache-control" content="no-cache">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', delay: true %>
  </head>

  <body>
    <div class="container">
      <div class="text-center p-3 w-100" role="title">
        <h1 class="text-center"><%= link_to 'Bootstrap-O-Matic', root_path %></h1>
      </div>
    </div>

    <div class="container">
      <div class="mb-4 text-center">
        <iframe src="https://rcm-eu.amazon-adsystem.com/e/cm?o=2&p=42&l=ur1&category=consumerelectronics&banner=0QZRBB0GNMSP1X9DKG02&f=ifr&linkID=55fa3e5da1dcb74d22c09051ea2ac5e7&t=fulondes-21&tracking_id=fulondes-21" width="234" height="60" scrolling="no" border="0" marginwidth="0" style="border:none;" frameborder="0"></iframe>
      </div>
    </div>

    <div class="container">
      <div class="styleguide-navigation pl-3 pr-3" id="styleguide-navigation" role="nav" data-turbolinks-permanent>
        <%= render 'navigation' %>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-6 col-sm-7 col-lg-8">
          <div role="main" id="styleguide-container">
            <template id="styleguide-head">
              <%= stylesheet_link_tag 'components', media: 'all' %>
              <%= stylesheet_link_tag    css_generator_url(id: resource.id), media: 'all', 'data-source-tag': true %>
            </template>
            <styleguide-content id="styleguide-content">
              <template>
                <div class="styleguide-content">
                  <%= yield %>
                </div>
              </template>
            </styleguide-content>
          </div>
        </div>
        <div class="col-6 col-sm-5 col-lg-4 d-flex">
          <div class="w-100 position-relative">
            <div class="styleguide-configurator p-3" id="styleguide-configurator" role="configurator" data-turbolinks-permanent>
              <%= render 'configurator' %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mb-4">
      <%= render 'shared/levelsio_by' %>
    </div>
  </body>
</html>
