@import "functions";

// Required Colours
<%= resource.required_colours.collect(&:to_scss_variable).join("\n") %>

// Optional Colours
<%= resource.optional_colours.collect(&:to_scss_variable).join("\n") %>

// Fonts
$font-family-sans-serif: <%= sanitize(resource.font_family_sans_serif.reject(&:empty?).join(', '), tags: []) %>;
$font-family-monospace: <%= sanitize(resource.font_family_monospace.reject(&:empty?).join(', '), tags: []) %>;
$font-family-base: $font-family-sans-serif;
$font-size-base: <%= resource.font_size_base %>rem;

// Body
$body-bg: <%= resource.body_bg %>;
$body-color: <%= resource.body_color %>;

@import "variables";

/* Theme Colours (Overriding what was defined in _variables.scss) */
<%= resource.to_theme_colours.html_safe %>

