<div class="optional-colour-field row">
  <%= ff.input :name, as: :string,
    required: false,
    readonly: true,
    wrapper_html: { class: 'col-5'},
    label_html: { class: 'sr-only' },
    input_html: {
      class: 'form-control-sm',
      value: ff.object.name,
    }
  %>
  <%= ff.input :colour, as: :string,
    required: false,
    wrapper_html: { class: 'col-4'},
    label_html: { class: 'sr-only' },
    input_html: {
      class: 'form-control-sm',
      type: 'text-color',
      value: ff.object.colour,
      'data-value-src': "--#{ff.object.name}"
    }
  %>
</div>
